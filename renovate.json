{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "commitMessagePrefix": "build(deps):",
    "commitMessageAction": "update",
    "automerge": true,
    "automergeType": "pr",
    "extends": [
        "config:recommended",
        ":semanticCommits",
        ":automergeStableNonMajor",
        ":preserveSemverRanges",
        "group:allNonMajor",
        "group:recommended",
        "schedule:automergeMonthly",
        "schedule:monthly"
    ]
}
